
GFG Link - https://practice.geeksforgeeks.org/problems/number-of-provinces/1


class Solution {
  public:
  
    void rec(int curr, vector<int>& vis, int V, vector<int> adjL[])
    {
        vis[curr]=1;
        for(auto it:adjL[curr])
        {
            if(vis[it]==0)
            {
                rec(it,vis,V,adjL);
            }
        }
    }
    
    int numProvinces(vector<vector<int>> adj, int V) {
        vector<int>adjL[V];
        for(int i=0;i<V;i++)
        {
            for(int j=0;j<V;j++)
            {
                if(adj[i][j]==1 && i!=j)
                {
                    adjL[i].push_back(j);
                    adjL[j].push_back(i);
                }
            }
        }
        vector<int> vis(V,0);
        int ans=0;
        for(int i=0;i<V;i++)
        {
            if(vis[i]==0)
            {
                ans++;
                rec(i,vis,V,adjL);
                
            }
        }
      return ans;    
    }
};
