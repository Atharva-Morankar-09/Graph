

vector<int> ShortestPath(vector<int> adj[], int src, int V)
{
   vector<int> dist(V+1,INT_MAX);
   queue<int> q;
   dist[src]=0;
   q.push(src);
   while(!q.empty())
   {
       int curr=q.front();
       q.pop();
       for(auto it:adj[curr])
       {
          if(dist[curr]+1 < dist[it])
          {
             dist[it]=dist[curr]+1;
             q.push(it);
          }
       }
   }
  return dist;
}
